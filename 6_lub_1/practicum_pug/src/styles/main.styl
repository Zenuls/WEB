// Переменные
$padding = 1rem
$gap = 20px
$font-size-large = 24px
$font-size-medium = 20px
$border-radius = 5px
$border-color = #ddd
$header-bg = #f8f9fa
$hover-color = #007bff
$active-color = #dc3545
$navy-color = navy
$grey-bg = grey

// Миксин для текста
text-style(fontSize, color)
  font-size fontSize
  color color

// Общие стили
.page__main-container
  padding $padding

// Навигация
.nav__container
  display flex
  align-items center
  padding 0 $gap
  @media (max-width 900px)
    flex-direction column
    align-items flex-start

.nav__logo
  text-style($font-size-large, black)
  text-decoration none
  font-weight bold

.nav__list
  list-style none
  display flex
  margin 0
  text-style($font-size-medium, black)
  @media (max-width 900px)
    flex-direction column
    margin-top $gap

// Стили изображений
.image-grid
  display flex
  justify-content center
  align-items center
  flex-wrap wrap
  gap $gap

.image-wrapper
  display flex
  justify-content center
  overflow hidden

.image-grid__image
  width 100%
  max-width 300px
  transition transform 0.3s ease

  &:hover
    transform scale(1.1)

// Стили карточек
.card-grid
  display grid
  grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
  gap $padding
  margin-top $gap
  @media (max-width 1024px)
    grid-template-columns 1fr

.card
  text-align center
  padding $padding
  border 1px solid $border-color
  border-radius $border-radius
  font-size $font-size-medium

.card__image
  width 50%
  margin-bottom $padding
  @media (max-width 600px)
    width 50%

.card__content
  margin-top $gap

// Текстовые блоки
.text-block
  display flex
  gap $padding
  border 1px solid $border-color
  padding $padding
  margin $padding 0
  @media (max-width 1024px)
    flex-direction column

.text-block__text
  flex 1

.text-block__title
  text-align center

.text-block__paragraph
  text-align justify
  font-size $font-size-medium

.text-block__image
  width 25%
  height auto
  @media (max-width 1024px)
    width 100%
    margin-top $padding

// Шапка
.header
  background-color $header-bg
  padding $padding

.nav
  display flex
  justify-content space-between
  align-items center

.nav__link
  margin $gap
  text-decoration none
  color #000

  &:hover
    background-color #f0f0f0
    color $hover-color

.nav__link_active
  color $active-color

// Подвал
.footer
  background-color $header-bg
  padding $padding

.footer__container
  display flex
  justify-content space-between

.footer__graphic
  margin-top $gap

// Таблицы
.table-container
  overflow auto

table
  width 100%
  margin $gap 0

th, td
  padding 8px
  text-align left
